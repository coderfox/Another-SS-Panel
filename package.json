{
  "name": "club-board",
  "version": "0.1.0",
  "description": "modern club member manager",
  "author": "Yuze Fu<i@xfox.me>",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon -x 'node -r ts-node/register -r tsconfig-paths/register --inspect' src/main.ts",
    "prestart:prod": "rm -rf dist && tsc && tspath --preserve -f",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "ava",
    "test:watch": "ava --watch",
    "predb": "tsc && tspath --preserve -f",
    "db": "typeorm"
  },
  "dependencies": {
    "@nestjs/common": "^5.4.0",
    "@nestjs/core": "^5.4.0",
    "@nestjs/typeorm": "^5.2.2",
    "bcrypt": "^3.0.2",
    "cookie-parser": "^1.4.3",
    "dockerode": "^2.5.7",
    "envalid": "^4.1.4",
    "globby": "^8.0.1",
    "hbs": "^4.0.1",
    "jquery": "^3.3.1",
    "jsonwebtoken": "^8.3.0",
    "pino": "^5.8.1",
    "reflect-metadata": "^0.1.10",
    "rxjs": "^6.2.2",
    "semantic-ui-css": "^2.4.1",
    "sqlite3": "^4.0.4",
    "tslib": "^1.9.3",
    "typeorm": "^0.2.8",
    "typescript": "^3.1.6",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@nestjs/testing": "^5.4.0",
    "@types/bcrypt": "^3.0.0",
    "@types/cookie-parser": "^1.4.1",
    "@types/dockerode": "^2.5.9",
    "@types/express": "^4.16.0",
    "@types/globby": "^8.0.0",
    "@types/hbs": "^4.0.0",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/node": "^10.12.5",
    "@types/pino": "^5.8.1",
    "@types/supertest": "^2.0.5",
    "@types/uuid": "^3.4.4",
    "ava": "1.0.0-beta.8",
    "nodemon": "^1.18.6",
    "nyc": "^13.1.0",
    "pino-pretty": "^2.2.3",
    "prettier": "^1.15.2",
    "supertest": "^3.1.0",
    "ts-node": "7.0.1",
    "tsconfig-paths": "^3.7.0",
    "tslint": "5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-consistent-codestyle": "^1.14.1",
    "tspath": "https://github.com/coderfox/tspath"
  },
  "nodemonConfig": {
    "ext": "ts,hbs"
  }
